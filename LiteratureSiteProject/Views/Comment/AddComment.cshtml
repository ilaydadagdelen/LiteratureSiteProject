@model EntityLayer.Concrete.Blog
<div class="border p-4 mt-5">
    <h4 class="mb-">Leave a Reply</h4>
    <span class="pb-5"><small class="text-muted">Your email address will not be published. Required fields are marked*</small></span>
    <form method="post" class="pt-2" asp-action="AddComment" asp-controller="Comment">
        <div class="mb-3">
            <textarea name="CommentContent" class="form-control" placeholder="Your comment..." rows="4" required></textarea>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <input name="CommentUser" type="text" class="form-control" placeholder="Your Name*" required>
            </div>
            <div class="col-md-6">
                <input type="text" name="BlogID" hidden class="form-control" placeholder="Blog ID*" required="" value="@ViewBag.i">
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1min.js" type="text/javascript"></script>