@using EntityLayer.Concrete
@model List<Comment>

<div>
    <h2 class="mb-4">Comments (3)</h2>

    @foreach(var item in Model)
    {
    <div class="d-flex mb-4">
        <div class="rounded-circle overflow-hidden" style="width: 50px; height: 50px;">
            <img src="~/literatureSiteProject/img/user.jpg" alt="User 1" class="img-fluid">
        </div>
        <div class="ms-3">
            <h6 class="mb-1">@item.CommentUser<span class="text-muted small"> - @item.CommentDate</span></h6>
            <p class="mb-2">@item.CommentContent</p>
            <button class="btn btn-sm btn-outline-primary">Reply</button>
        </div>
    </div>
    }
</div>